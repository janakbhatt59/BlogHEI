@model BlogManagement.Models.ViewModel.SendCodeVM

@{
    ViewData["Title"] = "Send Code";
}

<h2>@ViewData["Title"]</h2>

<h4>Choose a provider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendCode">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedProvider"></label>
                <select asp-for="SelectedProvider" class="form-control" asp-items="Model.Providers"></select>
            </div>
            <input type="hidden" asp-for="ReturnUrl" />
            <input type="hidden" asp-for="RememberMe" />
            <button type="submit" class="btn btn-primary">Send Code</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
